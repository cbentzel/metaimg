{
  // Required
  "manifest_version": 2,
  "name": "metaimg",
  "version": "0.0.1",

  "permissions": [
    "contextMenus",
    "<all_urls>"
  ],

  // Recommended
  "description": "Show metadata about images",
  
  "background": {
    "scripts": ["background.js", "exif.js"],
    "persistent": false
  }
}
